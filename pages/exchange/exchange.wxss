page {
  background-color: #ccc;
}
.user {
  width: 100%;
  display: flex;
  height: 150px;
  background-color: #fff;
}
.user .left {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
}
.user .left image {
  width: 100%;
  height: 100%;
  border: solid 8px #ccc;
}
.user .right {
  flex: 3;
  display: flex;
  padding: 0;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.user .right .l_top {
  display: flex;
  margin-bottom: 20px;
}
.user .right .l_top .userName {
  flex: 1;
  padding-top: 10px;
}
.user .right .l_top .vip {
  flex: 1;
}
.user .right .l_top .l_bottom {
  width: 100px;
}
.user .right .r_right {
  flex: 1;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.user .right .r_right .r_top {
  margin-bottom: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user .right .r_right .r_top .pointed {
  width: 0;
  height: 0;
  border: 15px solid transparent;
  border-right-color: #ccc;
}
.user .right .r_right .r_top .info {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ccc;
  font-size: 12px ;
  height: 30px;
  width: 100%;
}
.user .right .r_right .r_top .info .bubble {
  background-color: #4074DD;
  border-radius: 50rpx;
  width: 30rpx;
  height: 30rpx;
  position: relative;
  left: 10rpx;
  bottom: 10rpx;
}
.user .right .r_right .r_top .info .bubble .num {
  font-size: 24rpx;
  color: #ffffff;
  margin-left: 8rpx;
  margin-top: -2rpx;
}
.user .right .r_right .r_bottom .record {
  font-size: 12px;
}
.Navigation {
  display: flex;
  background-color: #fff;
}
.Navigation navigator {
  flex: 1;
  text-align: center;
  border: solid 1px #ccc;
  justify-content: center;
  align-items: center;
  padding: 5px;
}
.Navigation view {
  flex: 1;
  text-align: center;
  border: solid 1px #ccc;
  justify-content: center;
  align-items: center;
  padding: 5px;
}
.goods {
  padding: 10px 0;
}
.goods .title {
  width: 100%;
  text-align: center;
  font-size: 24px;
  color: #dededee8;
}
.goods .main {
  display: flex;
  flex-wrap: wrap;
}
.goods .main .good {
  width: 50%;
}
.goods .main .good .img {
  border: solid 10px #dededee8;
}
.goods .main .good .img image {
  width: 100%;
  height: 100%;
}
.goods .main .good .exchange {
  display: flex;
  padding: 10px;
  background-color: #fff;
  border: solid 1px #ccc;
  justify-content: space-evenly;
  align-items: center;
}
.goods .main .good .exchange .font {
  font-size: 14px;
}
.goods .main .good .exchange .Confirm {
  color: #6464d4;
}
